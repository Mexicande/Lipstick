<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.deerlive.lipstick.activity.PrizeListActivity">
    <include layout="@layout/toolbar_item"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <com.deerlive.lipstick.view.supertextview.SuperButton
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:sCornersRadius="30dp"
        app:sGradientOrientation="RIGHT_LEFT"
        app:sGradientStartColor="@color/colorPrimary"
        app:sGradientEndColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:text="@string/bt_capture"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_height="50dp" />
</RelativeLayout>
